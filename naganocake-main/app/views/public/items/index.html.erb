<h3 class="text-center my-5">商品一覧</h3>
<div class="container">
  <div class="row">
    <!-- サイドバー: ジャンルリスト -->
    <div class="col-md-2">
      <div class="list-group list-group-flush">
        <h5 class="text-center font-weight-bold">ジャンル</h5>
        <% @genres.each do |genre| %>
          <%= link_to genre.name, items_path(genre_id: genre.id), class: "list-group-item list-group-item-action" %>
        <% end %>
      </div>
    </div>

    <!-- 商品リスト -->
    <div class="col-md-10">
    <div class="row row-cols-1 row-cols-md-4 g-4">
        <% @items.each do |item| %>
          <div class="col">
            <div class="card h-100 border-0 shadow text-center"> <!-- 影を軽くする -->
              <%= link_to item_path(item.id), class: "stretched-link text-decoration-none" do %>
                <div class="d-flex justify-content-center mt-3"> <!-- 上部にマージンを追加 -->
                  <%= image_tag item.get_item_image(150,150), class: "img-fluid" %>
                </div>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="text-muted">税込価格: <%= item.with_tax_price %>円</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center mt-4">
      <%= paginate @items %>
      </div>
    </div>
    <!-- ページネーション -->
  </div>
</div>
