<!-- app/views/orders/show.html.erb -->
<h1 class="text-center my-4">注文詳細</h1>

<div class="container">
  <div class="row mb-4">
    <div class="col-md-6 mx-auto">
      <table class="table table-bordered table-hover">
        <tbody>
          <tr>
            <th class="bg-light">注文番号:</th>
            <td><%= @order.id %></td>
          </tr>
          <tr>
            <th class="bg-light">注文日:</th>
            <td><%= @order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          </tr>
          <tr>
          <th class="bg-light">送料:</th>
            <td><%= number_to_currency(@order.postage, unit: "¥", precision: 0, delimiter: ",") %></td>
          </tr>
          <tr>
          <th class="bg-light">合計金額:</th>
            <td><%= number_to_currency(@order.amount, unit: "¥", precision: 0, delimiter: ",") %></td>
          </tr>
          <tr>
          <th class="bg-light">商品合計:</th>
            <td><%= number_to_currency(@order.order_details.sum("price * quantity"), unit: "¥", precision: 0, delimiter: ",") %></td>
          </tr>
          <tr>
            <th class="bg-light">ステータス:</th>
            <td><%= @order.status_i18n %></td>
          </tr>
          <tr>
            <th class="bg-light">お届け先:</th>
            <td><%= '〒' + @order.postal_code + " " + @order.address + " " + @order.name %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <h3 class="text-center mb-4">商品リスト</h3>
  <table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>商品名</th>
        <th>単価</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= number_to_currency(order_detail.price, unit: "¥", precision: 0, delimiter: ",") %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= number_to_currency(order_detail.price * order_detail.quantity, unit: "¥", precision: 0, delimiter: ",") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center mt-4">
    <%= link_to '注文一覧に戻る', orders_path, class: 'btn btn-primary btn-lg' %>
  </div>
</div>