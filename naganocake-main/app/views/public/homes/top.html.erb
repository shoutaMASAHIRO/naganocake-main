<div class="container mt-5">
  <h1 class="text-center mb-4">Top Page</h1>
  
  <% if flash[:success_logout] %>
    <div class="alert alert-success text-center">
      <%= flash[:success_logout] %>
    </div>
  <% end %>
  <div class="bg-white p-4 rounded shadow-sm mb-4">
        <div class="mv text-center">
          <p>
            ようこそ、NaganoCakeへ!<br>
            このサイトは、ケーキ販売のECサイトです。<br>
            会員でない方も商品の閲覧はできますが、<br>
            購入には会員登録が必要になります。
          </p>
        </div>
      </div>
  <div class="row">
    <!-- Sidebar for genres -->
    <div class="col-md-3 mb-4">
      <div class="bg-light p-3 rounded shadow-sm">
        <h3 class="mb-3">ジャンル一覧</h3>
        <ul class="list-group">
          <% @genres.each do |genre| %>
            <li class="list-group-item">
              <%= link_to genre.name, items_path(genre_id: genre.id), class: "text-decoration-none" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    
    <!-- Main content -->
    <div class="col-md-9">
      
      <!-- Recommended Items Section -->
      <h2 class="section-ttl mb-4">オススメ商品</h2>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3 mb-4">
            <%= link_to item_path(item), class: "text-decoration-none" do %>
              <div class="card h-100 shadow-sm">
                <%= image_tag item.get_item_image(300, 300), class: "card-img-top" %>
                <div class="card-body text-center">
                  <h5 class="card-title mb-2"><%= item.name %></h5>
                  <p class="card-text">ジャンル：<%= item.genre.name %></p>
                  <p class="text-primary font-weight-bold"><%= item.with_tax_price %>円</p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center mt-4">
      <%= paginate @items %>
      </div>
    </div>
  </div>
</div>