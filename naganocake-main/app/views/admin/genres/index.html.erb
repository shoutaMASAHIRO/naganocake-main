<% if @genre.errors.any? %> 
  <div class="alert alert-danger text-center" style="max-width: 600px; margin: 0 auto;">
    <h4 class="alert-heading"><%= @genre.errors.count %> errors occurred</h4>
    <ul>
      <% @genre.errors.full_messages.each do |message| %> 
        <li><%= message %></li>　
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <h1 class="mb-4 text-center">ジャンル管理</h1>

  <% if flash[:success] %>
    <div class="alert alert-success text-center" style="max-width: 600px; margin: 0 auto;">
      <%= flash[:success] %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <%= form_with model: @genre, url: admin_genres_path, class: "form" do |f| %>
        <div class="form-group">
          <label for="genre_name">ジャンル追加</label>
          <%= f.text_field :name, class: "form-control", id: "genre_name", autofocus: true, placeholder: "ジャンル名" %>
        </div>
        <div class="text-left">
          <%= f.submit '追加', class: "btn btn-primary mt-3" %>
        </div>
      <% end %>
    </div>


    <div class="col-md-7 offset-md-1">
      <ul class="list-group">
        <% @genres.each do |genre| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>ジャンル名：<%= genre.name %></span>
            <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-secondary btn-sm" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- ページネーションリンクを表示 -->
<div class="pagination-container">
  <%= paginate @genres %>  <!-- ページネーションを追加 -->
</div>