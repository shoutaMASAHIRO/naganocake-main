<h3 class="text-center my-5">商品詳細</h3>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="text-center">
        <%= image_tag @item.get_item_image(400,400), class: "img-fluid rounded shadow-sm" %>
      </div>
    </div>
    <div class="col-md-6">
      <h2 class="mb-4 font-weight-bold"><%= @item.name %></h2>

      <p class="lead"><%= @item.introduction %></p>

      <!-- ジャンル -->
      <p><strong>ジャンル:</strong> <%= @item.genre.name %></p>

      <!-- 販売ステータス -->
      <p><strong>販売ステータス:</strong>
      <%= @item.is_deleted ? "販売停止中" : "販売中" %>
      </p>

      <!-- 税込価格 -->
      <h4 class="text-primary">税込価格: <%= @item.with_tax_price %>円</h4>

      <!-- 編集リンク -->
      <%= link_to '商品を編集する', edit_admin_item_path(@item), class: "btn btn-outline-primary mt-4" %>
    </div>
  </div>
</div>
