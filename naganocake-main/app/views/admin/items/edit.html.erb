<%= render 'admin/shared/error_messages', resource: @item %>

<div class="container mt-4">
  <h1 class="my-4 text-center">編集</h1>

  <%= form_with model: @item, url: admin_item_path(@item), method: :patch, class: "form" do |f| %>
    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :image, "画像", class: "form-label" %>
        <%= f.file_field :image, class: "form-control", accept: "image/*" %>
      </div>

      <div class="col-md-6">
        <%= f.label :name, "商品名", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "商品名" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <%= f.label :introduction, "説明", class: "form-label" %>
        <%= f.text_field :introduction, class: "form-control", placeholder: "説明文" %>
      </div>

      <div class="col-md-6 genre_field">
        <%= f.label :genre_id, "ジャンル", class: "form-label" %><br>
        <%= f.collection_select :genre_id, @genre, :id, :name, { prompt: "ジャンル名" }, class: "form-select" %>
      </div>

      <div class="col-md-6">
        <%= f.label :price, "価格（円）", class: "form-label" %>
        <%= f.number_field :price, class: "form-control", min: 0, step: 1, placeholder: "価格を入力してください" %>
      </div>
    </div>

      <div class="row mb-3">
      <div class="col-md-6 is_deleted_field">
        <label class="form-label">販売ステータス</label>
        <div class="form-check">
          <%= f.radio_button :is_deleted, false, class: "form-check-input" %>
          <%= f.label :is_deleted, "販売中", value: false, class: "form-check-label" %>
        </div>
        <div class="form-check">
          <%= f.radio_button :is_deleted, true, class: "form-check-input" %>
          <%= f.label :is_deleted, "販売停止中", value: true, class: "form-check-label" %>
        </div>
      </div>
    </div>

    <div class="text-center mt-4">
      <%= f.submit '更新', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>