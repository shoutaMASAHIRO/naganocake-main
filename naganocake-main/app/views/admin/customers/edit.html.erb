
<div class="container mt-4">
  <h2 class="text-center">会員情報編集</h2>
  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
    
    <div class="mb-3">
      <%= f.label :last_name, "姓", class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control", autofocus: true, autocomplete: "last_name" %>
    </div>

    <div class="mb-3">
      <%= f.label :first_name, "名", class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control", autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="mb-3">
      <%= f.label :last_name_kana, "姓 (カナ)", class: "form-label" %>
      <%= f.text_field :last_name_kana, class: "form-control", autofocus: true, autocomplete: "last_name_kana" %>
    </div>

    <div class="mb-3">
      <%= f.label :first_name_kana, "名 (カナ)", class: "form-label" %>
      <%= f.text_field :first_name_kana, class: "form-control", autofocus: true, autocomplete: "first_name_kana" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-3">
      <%= f.label :postal_code, "郵便番号", class: "form-label" %>
      <%= f.text_field :postal_code, class: "form-control", autofocus: true, autocomplete: "postal_code" %>
    </div>

    <div class="mb-3">
      <%= f.label :address, "住所", class: "form-label" %>
      <%= f.text_field :address, class: "form-control", autofocus: true, autocomplete: "address" %>
    </div>

    <div class="mb-3">
      <%= f.label :phone_number, "電話番号", class: "form-label" %>
      <%= f.text_field :phone_number, class: "form-control", autofocus: true, autocomplete: "phone_number" %>
    </div>

    <div class="mb-3">
    <%= f.label :is_deleted, "ステータス", class: "form-label d-block" %>
    
    <div class="form-check form-check-inline">
      <%= f.radio_button :is_deleted, false, id: "customer_status_active", class: "form-check-input" %>
      <%= f.label :is_deleted, "有効", value: false, class: "form-check-label", for: "customer_status_active" %>
    </div>
  
    <div class="form-check form-check-inline">
      <%= f.radio_button :is_deleted, true, id: "customer_status_withdrawn", class: "form-check-input" %>
      <%= f.label :is_deleted, "退会", value: true, class: "form-check-label", for: "customer_status_withdrawn" %>
    </div>
    </div>

    <%= f.submit "更新", class: "btn btn-primary" %>
  <% end %>
</div>